{
    "compilerOptions": {
        "types": [
            "mocha",
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
}